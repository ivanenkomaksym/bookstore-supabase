@using WebUI.Authentication
@using WebUI.Services;
@inject IAuthService AuthService;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor;

@{
    var user = await HttpContextAccessor.HttpContext.GetUserOrTryLoginWithCookies(AuthService);
}
@if (user != null)
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="">Welcome, @user.Email</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Account/Logout">Sign out</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Order">My Orders</a>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login">Sign in</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-page="/Register">Register</a>
    </li>
}
